<%- include('../inc/header.ejs') %>
    <div class="p-3 p-sm-5">
        <h2 class="text-center mb-5">
            <%= title %>
        </h2>

        <div class="row" >
            <div class=" col-md-8 col-sm-12 card ">
                <div class="row">
                    <div class="col-md-7 col-sm-12">
                        <img class="img-detail" src="<%= data.image %>" alt="" width="500px" height="500px">
                    </div>
                    <div class="col-md-5 col-sm-12">
                        <h4 class="pt-5">Tên sản phẩm: <%= data.name %></h4><hr>
                        <p class=""><b>Thể loại:</b> <%= data.id_category.name %></p>
                        <p class=""><b>Giá:</b> <%= data.price %> VNĐ</p>
                        <p class=""><b>Số lượng:</b> <%= data.quantity %></p><hr>
                        <p class=""><b>Mô tả:</b> <%= data.detail %>.  </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-sm-12 card">
                <h4 class="pt-5 text-center">Bình luận của khách hàng</h4>
                <div class="comment">
                    <% listCmt.forEach( (row ) => { %>
                        <div style="border-radius: 10px; border-width: 10px; background-color: blueviolet;">
                            <p>Người dùng: <%= row.id_user.fullname %> </p>
                            <p>Nội dung cmt: <%= row.cmt_content %> </p>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>
    <%- include('../inc/footer.ejs') %>